<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer red circle -->
    <item>
        <shape
            android:shape="oval">
            <solid android:color="#FF0000" />
            <stroke
                android:width="10dp"
                android:color="#FFFFFF" />
        </shape>
    </item>

    <!-- Inner white circle -->
    <item
        android:left="2dp"
        android:top="2dp"
        android:right="2dp"
        android:bottom="2dp">
        <shape
            android:shape="oval">
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>
</layer-list>